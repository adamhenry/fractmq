<html>
  <head>
    <style>
      table, tr, td, tbody, img {
        border: 0px;
        margin: 0px;
        padding: 0px;
      }
      img {
        height: <%= 360/params["side"] %>px;
        width: <%= 360/params["side"] %>px;
      }
    </style>
  </head>
  <body>
    <table>
      <% params["side"].to_i.times do |i| %>
      <tr>
        <% params["side"].to_i.times do |j| %>
        <td><img src="snowflake<%= "#{j}.#{params["side"]-(i+1)}.png" %>" /></td>
        <% end %>
      </tr>
      <% end %>
    </table>
    <a href="start/<%= params["side"] %>">Restart</a>
  </body>
<html>
